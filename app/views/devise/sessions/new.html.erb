<%= render "partials/secondbg" %>
<div class="row center-xs" style="width:100%;">
  <div class="col-xs-8 col-md-6">
    <div class="box txt-left antic-font" style="margin-top:12em;">

      <h2 class="big-font">Iniciar sesión</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, "Correo electrónico", class:"small-font" %><br />
          <%= f.email_field :email, autofocus: true, class:"form-control" %>
        </div>

        <div class="field">
          <%= f.label :password, "Contraseña", class:"small-font" %><br />
          <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me,  "Recordarme", class:"small-font" %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Ingresar", class:"btn" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
